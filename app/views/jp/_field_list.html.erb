<% form_remote_tag  :url => {:action => :change_section_list} do %>
	<table CELLSPACING=0>
		<tr height=30 style="background: #E5ECF9;color:#1e2078;padding: 0.2em 1em;">
			<td colspan=20 align="center"><strong style="font-size:125%;">単語属性</strong></td>
		</tr>
		<tr height=30>
			<td style="width:20px;"><%= check_box_tag '0_id', 'true', true, :disabled=>true, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['id'] %></td>
			<td style="width:20px;"><%= check_box_tag '1_surface', 'true', field_list.include?("1_surface")?true:false, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['surface'] %></td>
			<td style="width:20px;"><%= check_box_tag '2_reading', 'true', field_list.include?("2_reading")?true:false, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['reading'] %></td>
			<td style="width:20px;"><%= check_box_tag '3_pronunciation', 'true', field_list.include?("3_pronunciation")?true:false, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['pronunciation'] %></td>
			<td style="width:20px;"><%= check_box_tag '4_base_id', 'true', field_list.include?("4_base_id")?true:false, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['base_id'] %></td>
			<td style="width:20px;"><%= check_box_tag '5_root_id', 'true', field_list.include?("5_root_id")?true:false, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['root_id'] %></td>
			<td style="width:20px;"><%= check_box_tag '6_dictionary', 'true', field_list.include?("6_dictionary")?true:false, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['dictionary'] %></td>
			<td style="width:20px;"><%= check_box_tag '7_pos', 'true', field_list.include?("7_pos")?true:false, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['pos'] %></td>
			<td style="width:20px;"><%= check_box_tag '8_ctype', 'true', field_list.include?("8_ctype")?true:false, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['ctype'] %></td>
			<td style="width:20px;"><%= check_box_tag '9_cform', 'true', field_list.include?("9_cform")?true:false, :style=>"vertical-align:middle;" %></td><td style="width:80px;"><%= initial_property_name['cform'] %></td>
		</tr>
		<% if User.find_by_id(session[:user_id]) %>
			<tr height=30>
				<td><%= check_box_tag '10_tagging_state', 'true', field_list.include?("10_tagging_state")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['tagging_state'] %></td>
				<td><%= check_box_tag '11_log', 'true', field_list.include?("11_log")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['log'] %></td>
				<td><%= check_box_tag '12_created_by', 'true', field_list.include?("12_created_by")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['created_by'] %></td>
				<td><%= check_box_tag '13_modified_by', 'true', field_list.include?("13_modified_by")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['modified_by'] %></td>
				<td><%= check_box_tag '14_updated_at', 'true', field_list.include?("14_updated_at")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['updated_at'] %></td>
			</tr>
		<% end %>
		<tr height=30>
			<% JpNewProperty.find(:all, :order=>"id ASC" ,:conditions=>["section=?", 'lexeme']).each_with_index{|property, index| %>
				<td><%= check_box_tag (15+index).to_s+'_'+property.property_string, 'true', field_list.include?((15+index).to_s+'_'+property.property_string)?true:false, :style=>"vertical-align:middle;" %></td><td><%= property.human_name %></td>
				<% if (index+1) % 10 == 0 %>
					</tr><tr height=30>
				<% end %>
			<% } %>
		</tr>
		<tr height=30 style="background: #E5ECF9;color:#1e2078;padding: 0.2em 1em;">
			<td colspan=20 align="center"><strong style="font-size:125%;">複合語属性</strong></td>
		</tr>
		<tr height=30>
			<% if User.find_by_id(session[:user_id]) %>
				<td><%= check_box_tag '100_sth_struct', 'true', field_list.include?("100_sth_struct")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['sth_struct'] %></td>
				<td><%= check_box_tag '101_sth_tagging_state', 'true', field_list.include?("101_sth_tagging_state")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['sth_tagging_state'] %></td>
				<td><%= check_box_tag '102_sth_log', 'true', field_list.include?("102_sth_log")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['log'] %></td>
				<td><%= check_box_tag '103_sth_modified_by', 'true', field_list.include?("103_sth_modified_by")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['modified_by'] %></td>
				<td><%= check_box_tag '104_sth_updated_at', 'true', field_list.include?("104_sth_updated_at")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['updated_at'] %></td>
			<% else %>
				<td><%= check_box_tag '100_sth_struct', 'true', field_list.include?("100_sth_struct")?true:false, :style=>"vertical-align:middle;" %></td><td><%= initial_property_name['sth_struct'] %></td>
			<% end %>
		</tr>
		<tr height=30>
			<% JpNewProperty.find(:all, :order=>"id ASC" ,:conditions=>["section=?", 'synthetic']).each_with_index{|property, index| %>
				<td><%= check_box_tag (105+index).to_s+'_'+property.property_string, 'true', field_list.include?((105+index).to_s+'_'+property.property_string)?true:false, :style=>"vertical-align:middle;" %></td><td><%= property.human_name %></td>
				<% if (index+1) % 10 == 0 %>
					</tr><tr height=30>
				<% end %>
			<% } %>
		</tr>
	</table>
	<%= submit_tag "保存" %>
<% end %>